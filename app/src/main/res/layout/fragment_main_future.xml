<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#eee"
    android:padding="5dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/note_write_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/note_write_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:gravity="start"
                android:hint="给未来的自己写点什么吧^_^"
                android:textColor="#808080"
                android:textColorHint="#ddd"
                android:textSize="@dimen/textview_textsize_xh" />

            <!--关于谁设置-->
            <LinearLayout
                android:id="@+id/main_future_with"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/layer_list_border_topline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="关于谁"
                    android:textColor="#808080"
                    android:textSize="@dimen/textview_textsize_xh" />

                <TextView
                    android:id="@+id/main_future_with_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="无"
                    android:textColor="#ddd"
                    android:textSize="@dimen/textview_textsize_m" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/part_next_gray" />

            </LinearLayout>

            <!--提醒时间设置-->
            <LinearLayout
                android:id="@+id/main_future_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/layer_list_border_topline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="写给何时"
                    android:textColor="#808080"
                    android:textSize="@dimen/textview_textsize_xh" />

                <TextView
                    android:id="@+id/main_future_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="无"
                    android:textColor="#ddd"
                    android:textSize="@dimen/textview_textsize_m" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/part_next_gray" />

            </LinearLayout>

            <!--相关手机号设置-->
            <LinearLayout
                android:id="@+id/main_future_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/layer_list_border_topline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="相关手机号"
                    android:textColor="#808080"
                    android:textSize="@dimen/textview_textsize_xh" />

                <TextView
                    android:id="@+id/main_future_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="无"
                    android:textColor="#ddd"
                    android:textSize="@dimen/textview_textsize_m" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/part_next_gray" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/note_write_confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="记录"
            android:textSize="@dimen/textview_textsize_xh" />

    </LinearLayout>

</android.support.v7.widget.CardView>