<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:chart="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#eee">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        chart:cardElevation="3dp">

        <com.db.chart.view.LineChartView
            android:id="@+id/advice_line_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:background="#fff" />

    </android.support.v7.widget.CardView>

    <!--生活小贴士-->
    <android.support.v7.widget.CardView
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/main_home_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:text="生活小贴士"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/textview_textsize_m"/>

            <android.support.v7.widget.CardView
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_home_suggest_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:textColor="#808080"
                    android:text="正在加载饮食推荐..."
                    android:layout_marginLeft="-24dp"
                    android:layout_marginRight="-16dp"
                    android:paddingBottom="30dp"
                    android:paddingTop="18dp"
                    android:paddingLeft="39dp"
                    android:paddingRight="31dp"
                    android:background="@drawable/suggest1"
                    android:textSize="@dimen/textview_textsize_h"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_home_suggest_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:textColor="#808080"
                    android:text="正在加载情感推荐..."
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="-24dp"
                    android:layout_marginRight="-16dp"
                    android:paddingBottom="30dp"
                    android:paddingTop="18dp"
                    android:paddingLeft="39dp"
                    android:paddingRight="31dp"
                    android:background="@drawable/suggest1"
                    android:textSize="@dimen/textview_textsize_h"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
